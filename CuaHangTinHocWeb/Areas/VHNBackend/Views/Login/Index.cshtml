@model Data.tblAccount
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HOAINAMINZ COURSE | Log in</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Areas/VHNBackend/Plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Areas/VHNBackend/Plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Areas/VHNBackend/Dist/css/adminlte.min.css">
    <link href="~/Areas/VHNBackend/Plugins/customStyle.css" rel="stylesheet" type="text/css">
</head>
<body class="hold-transition login-page">
    <div class="container">
        <div class="d-flex justify-content-center"><img src="~/Areas/VHNBackend/Dist/img/kokomi.jpg" alt="Kokomi is my waifu" class="rounded-circle" /></div>

    </div>
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>HOAINAMINZ</b>   COURSE</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Đăng nhập ngay</p>
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    @Html.ValidationSummary();
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(x => x.Username, new { @placeholder = "Tài khoản", @class = "form-control" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(x => x.Password, new { @placeholder = "Mật khẩu", @class = "form-control" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    Nhớ thông tin
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                        </div>
                        <!-- /.col -->
                    </div>
                }



                <div class="social-auth-links text-center mb-3">
                    <p>- Hoặc đăng nhập nhành bằng -</p>
                    <a href="#" class="btn btn-block btn-primary">
                        <i class="fab fa-facebook mr-2"></i> Sử dụng tài khoản Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-danger">
                        <i class="fab fa-google-plus mr-2"></i> Sử dụng tài khoản Google
                    </a>
                </div>
                <!-- /.social-auth-links -->
                @*<p class="mb-1">
                        <a href="forgot-password.html">I forgot my password</a>
                    </p>
                    <p class="mb-0">
                        <a href="register.html" class="text-center">Register a new membership</a>
                    </p>*@
            </div>
            <!-- /.login-card-body -->
        </div>

    </div>

    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Areas/VHNBackend/Plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Areas/VHNBackend/Plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Areas/VHNBackend/Dist/js/adminlte.min.js"></script>
</body>
</html>
