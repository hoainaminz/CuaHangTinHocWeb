@model IEnumerable<Data.tblAccessory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Page Content-->
<div class="container px-4 px-lg-5">
    <!-- Heading Row-->
    <div class="row gx-4 gx-lg-5 align-items-center my-5">
        <div class="col-lg-7">
            <!--carousel-->
            <div id="demo" class="carousel slide" data-interval="3000">

                <!-- Indicators/dots -->
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
                </div>

                <!-- The slideshow/carousel -->
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Images/img1.jpg" alt="Los Angeles" class="d-block w-100">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/img2.jpg" alt="Chicago" class="d-block w-100" style="height:295px;">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/img3.jpg" alt="New York" class="d-block w-100">
                    </div>
                </div>

                <!-- Left and right controls/icons -->
                <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
            <!--end carousel-->
        </div>
        <div class="col-lg-5">
            <h2 class="font-weight-light">HỆ THỐNG BÁN LẺ UY TÍN CHTH</h2>
            <HR />
            <p>Nếu Quý Khách gặp khó khăn trong việc liên hệ Trung Tâm Bảo Hành, Quý Khách vui lòng liên hệ với bộ phận chăm sóc khách hàng của CHTH theo thông tin sau để được hỗ trợ:</p>
            <a class="btn btn-outline-primary" href="#!">LIÊN HỆ CSKH</a>
        </div>
    </div>
    <!-- Call to Action-->
    <hr />
    @*<div class="card text-white bg-success bg-opacity-50 my-5 py-4 text-center">
        <div class="card-body"><p class="text-black m-0">Linh kiện máy tính</p></div>
    </div>*@
    <!-- Content Row-->
    
        <div class="row gx-4 gx-lg-5">
            <!-- Items-->
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-5">
                    <div class="card h-200">
                        <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Bán chạy</div>
                        <div class="card-body">
                            <div class=" d-flex justify-content-center">
                                <img class="img-fluid p-2" src="@Url.Content(item.Hinhanh)" alt="barosia" style="max-height: 200px; background-position: center center; background-repeat: no-repeat; ">
                            </div>
                            <h2 class="card-title d-flex justify-content-center">@Html.DisplayFor(modelItem => item.Tenlinhkien)</h2>
                            <hr />
                            <h5 class="card-text text-danger d-flex justify-content-center">Giá bán: @Html.DisplayFor(modelItem => item.Giaban)<strong> VNĐ</strong></h5>
                        </div>
                        <div class="card-footer d-flex justify-content-center"><a href="@Url.Action("Details","Accessories", new {id = item.IDLinhkien })" class="btn btn-outline-dark mt-auto px-5">   Chi tiết   </a></div>
                    </div>
                </div>
            }
            <!-- End-Items-->
        </div>
    
</div>
